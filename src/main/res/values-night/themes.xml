<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HelloAndriod" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <!-- 主色调 -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <!-- 状态条颜色 -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- ActionBar主题 -->
        <item name="actionBarStyle">@style/Theme.MyActionBar</item>

        <!-- 根据系统亮度模式设置字体颜色 -->
        <item name="android:textColor">@color/white</item> <!-- 默认为白色模式下的字体颜色 -->
        <item name="android:textColorPrimaryInverse">@color/black</item> <!-- 反转模式下的字体颜色 -->
    </style>

    <style name="Theme.HelloAndriod" parent="Base.Theme.HelloAndriod" />

    <style name="Theme.MyActionBar" parent="Base.Widget.Material3.Light.ActionBar.Solid">
        <item name="background">@color/purple_500</item>
        <item name="titleTextStyle">@style/Theme.MyTitleTextStyle</item>
    </style>

    <style name="Theme.MyTitleTextStyle" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>